<!DOCTYPE html>

<html metal:use-macro="load: ../base_layout.pt">
<html lang="${request.locale_name}">
<head>

</head>

<body>

<metal:block fill-slot="content">
    <div class="main_wrapper">
        <div style="margin-top:20pt">
            <table id="example" class="info_table" cellspacing="0" width="100%">
                <thead>
                <tr>
                    <th>Source ID</th>
                    <th>Patient ID</th>
                    <th>Organ</th>
                    <th>Dignity</th>
                    <th>Celltype</th>
                    <th>Histology</th>
                    <th>Location</th>
                    <th>Metastatis</th>
                    <th>Organism</th>
                    <th>Treatment</th>
                    <th>Person</th>
                    <th>Prep Date</th>
                </tr>
                </thead>
            </table>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            // create dataTable
            $('#example').dataTable({
                data: ${project},

                columns: [
                    { data: "source_id",
                        "render": function (data, type, row) {
                            return "<a class='nostylelink'  href= '/source_id/" + data + "'>" + data + "</a>";
                        }},
                    { data: "patient_id",
                        "render": function (data, type, row) {
                            return "<a class='nostylelink'  href= '/source/" + data + "'>" + data + "</a>";
                        }},
                    { data: "organ",
                        "render": function (data, type, row) {
                            return "<a class='nostylelink'  href= '/organ/" + data + "'>" + data + "</a>";
                        }},
                    { data: "dignity",
                        "render": function (data, type, row) {
                            return "<a class='nostylelink'  href= '/dignity/" + data + "'>" + data + "</a>";
                        } },
                    { data: "celltype",
                        "render": function (data, type, row) {
                            return "<a class='nostylelink'  href= '/celltype/" + data + "'>" + data + "</a>";
                        }},
                    { data: "histology",
                        "render": function (data, type, row) {
                            return "<a class='nostylelink'  href= '/histology/" + data + "'>" + data + "</a>";
                        }},
                    { data: "location"},
                    { data: "metastatis"},
                    { data: "organism",
                        "render": function (data, type, row) {
                            return "<a class='nostylelink'  href= '/organism/" + data + "'>" + data + "</a>";
                        }},
                    { data: "treatment",
                        "render": function (data, type, row) {
                            return "<a class='nostylelink'  href= '/treatment/" + data + "'>" + data + "</a>";
                        }},
                    { data: "person",
                        "render": function (data, type, row) {
                            return "<a class='nostylelink'  href= '/person/" + data + "'>" + data + "</a>";
                        }
                    },
                    { data: "prep_date"}
                ],
                dom: 'Bfrtip',
                buttons: ['csv', 'excel', 'pdf']
            });
        });
    </script>
</metal:block>
</body>
</html>
</html>